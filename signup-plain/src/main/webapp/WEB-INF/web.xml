<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Electricity Business - Module Inscription (Sans Framework)</display-name>
    
    <!-- Configuration de la base de données (pas de Spring DataSource) -->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:postgresql://localhost:5441/eb</param-value>
    </context-param>
    
    <context-param>
        <param-name>db.username</param-name>
        <param-value>eb</param-value>
    </context-param>
    
    <context-param>
        <param-name>db.password</param-name>
        <param-value>eb</param-value>
    </context-param>
    
    <!-- Configuration du service mail (sans framework) -->
    <context-param>
        <param-name>mail.smtp.host</param-name>
        <param-value>localhost</param-value>
    </context-param>
    
    <context-param>
        <param-name>mail.smtp.port</param-name>
        <param-value>1025</param-value>
    </context-param>
    
    <context-param>
        <param-name>mail.from</param-name>
        <param-value>no-reply@eb.local</param-value>
    </context-param>
    
    <!-- Configuration des Servlets (mapping manuel, pas de Spring @WebServlet) -->
    
    <!-- Servlet d'inscription -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.eb.inscription.servlet.RegisterServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register-servlet</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet de vérification -->
    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>com.eb.inscription.servlet.VerifyServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>VerifyServlet</servlet-name>
        <url-pattern>/verify-servlet</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet de succès -->
    <servlet>
        <servlet-name>VerifySuccessServlet</servlet-name>
        <servlet-class>com.eb.inscription.servlet.VerifySuccessServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>VerifySuccessServlet</servlet-name>
        <url-pattern>/verify-success-servlet</url-pattern>
    </servlet-mapping>
    
    <!-- Page d'accueil par défaut -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Configuration encodage UTF-8 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
</web-app>
